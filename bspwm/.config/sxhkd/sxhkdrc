# Open Applications

# super + w Change to random wallpaper.

super + slash
    emacsclient -c -a 'emacs'

super + k
    rofi -modi "keymaps":"~/.config/rofi/keymaps/keymaps" -show "keymaps" -config "~/.config/rofi/keymaps/config_keymaps.rasi"

super + shift + {d, t, b}
    {discord, telegram-desktop, librewolf}

# Show clipboard history, delete it, or clear all clipboards of current data
super + c
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' -config ".config/rofi/greenclip.rasi"

super + alt + c
    greenclip clear

super + shift + c
    xclip -selection clipboard /dev/null && xclip -selection primary /dev/null && xclip -selection secondary /dev/null && notify-send "Clearing clipboards!"

super + {Return, d, e, space}
    {kitty, rofi -show drun,kitty -e lf, jgmenu_run}

alt + Tab
    rofi -show window

# Navigate to previous or next, or selected desktop
super + ctrl + {Left, Right}
    bspc desktop -f {prev, next}
super + ctrl + {j, k}
    bspc desktop -f {next,prev}
super + ctrl + {1-9, 0}
    bspc desktop -f ^{1-9,10}

# Move focused window to previous or next, or selected Desktop
super + shift + {Left, Right}
    bspc node -d {prev, next} --follow
super + shift + {j, k}
    bspc node -d {next, prev} --follow
super + shift + {1-9,0}
    bspc node -d ^{1-9,10} --follow

# Focus on previous or next application
super + alt + {Left, Right}
    bspc node -f {prev, next}
super + alt + {j,k}
    bspc node -f {next, prev}

# Close focused application
super + shift + q
    bspc node -c

# Toggle or switch to fullscreen, tiled, or floating
super + {f,t}
    bspc node -t \~{fullscreen,tiled}

super + alt + f
    bspc node -t \~{floating}

# Polybar modes
super + Escape
    bash -c "~/.config/sxhkd/scripts/system 1 modes/system_mode"
Print
    bash -c "~/.config/sxhkd/scripts/system 2 modes/picture_mode"

# Restart SXHKD
super + alt + r
    pkill -USR1 -x sxhkd ; dunstify -u low "SXHKD Restarted"

# Kill all windows
ctrl + Delete
    bspc query -N | xargs -I id bspc node id -c && notify-send "Killed all windows"
