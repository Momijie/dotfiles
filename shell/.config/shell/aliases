# Editor
alias vi=nvim
alias svi='doas nvim'
alias edit='nvim'
alias code='vscodium'

# Git
alias lg='lazygit'

# Edit configs
alias zshrc='nvim ~/.zshrc'
alias zshenv='nvim ~/.zshenv'

# Custom cds
alias config='cd ~/.config'
alias repos='cd ~/Documents/repos'
alias dotfiles='cd ~/dotfiles/'

# Arch
alias pup='doas pacman -Syu'
alias pin='doas pacman -S'
alias pre='doas pacman -Rns'
alias pro='doas pacman -Rns $(pacman -Qtdq)'

# Systemctl
alias sys='systemctl'
alias sysu='systemctl --user'
alias status='sys status'
alias statusu='sysu status'
alias start='sys start'
alias startu='sysu start'
alias stop='sys stop'
alias stopu='sysu stop'
alias restart='sys restart'
alias restartu='sysu restart'
alias enable='sys enable'
alias enableu='sysu enable'
alias disable='sys disable'
alias disableu='sysu disable'
alias reload='sys daemon-reload'
alias reloadu='sysu daemon-reload'
alias splex='systemctl start plexmediaserver.service'

# Terminal
alias r='source ~/.zshrc'
alias c='clear'
alias q='exit'
alias bat='bat --paging=always -n'
alias cat='bat --paging=never -n'

alias ls='ls --color=auto --time-style=+%D\ %I:%m\ %p'
alias cp='cp -i'
alias mkdir='mkdir -pv'

# Misc
alias py='python3'
alias build='mkdir -p build/ ; cd build/ ; cmake .. ; make ; cd ..'
alias del='trash'
alias mount='mount |column -t'
alias pserv='python -m http.server'
alias myip='curl ipv4.icanhazip.com'
alias ghist='history | grep'
